  "scripts": {
    "start": "next start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "next build",
    "postbuild": "next-sitemap",
    "dev": "next dev",
    "dev:with-redis": "concurrently \"redis-server --port 6379\" \"yarn dev\" --names \"redis,next\" --prefix-colors \"red,blue\"",
    "dev:smart": "node scripts/dev-with-redis.js",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker:down": "docker-compose -f docker-compose.dev.yml down",
    "eslint": "eslint src/pages/** src/lib/** src/components/** tests/**",
    "prettier": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "TZ=America/Los_Angeles yarn jest -c tests/config/jest.config.js",
    "prepare": "husky"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "lint-staged": {
    "yarn.lock": [
      "yarn-deduplicate --strategy fewer",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
